<section>
  
  <div class="container mx-auto">
    <div class="fs-1">
      QR generator
    </div>
    <div>
      <form action="/result" method="GET">
        <input type="text" name="url" placeholder="Generate..." />
        <button type="submit">Generate</button>
      </form>
    </div>
    <%= if !(@qr == nil) do %>
      <div id="png">
        <img src={"#{@qr}"} />
      </div>
    <% end %>
  </div>
</section>